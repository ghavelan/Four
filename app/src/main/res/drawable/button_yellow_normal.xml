<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- SHADOW LAYER -->
    <item
        android:left="@dimen/gv_shadow"
        android:right="@dimen/gv_shadow">
        <shape>
            <gradient
                android:angle="90"
                android:endColor="@color/border_shadow_end"
                android:startColor="@color/border_shadow_begin" />

        </shape>
    </item>
    <!-- BUTTON LAYER -->
    <item android:bottom="@dimen/gv_shadow">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <stroke
                android:width="@dimen/gv_button_line_width"
                android:color="@color/black" />
            <corners android:radius="@dimen/gv_buttons_radius" />
            <gradient
                android:angle="-90"
                android:endColor="@color/yellowSelected"
                android:startColor="@color/yellow" />
        </shape>
    </item>

</layer-list>